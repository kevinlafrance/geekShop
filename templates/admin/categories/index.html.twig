{% extends 'base.html.twig' %}

{% block title %}Gestion des Catégories{% endblock %}

{% block body %}
     <section class="container">
         <h1>Gérer les Catégories</h1>
         <a href="{{ path("admin_categories_add") }}" class="btn btn-primary">Ajouter une Catégorie</a>
     </section>

    <section class="container">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nom</th>
                <th scope="col">Parent</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for categorie in categories %}
                <tr>
                    <td> {{ categorie.id }}</td>
                    <td> {{ categorie.name }}</td>
                    <td> {{ categorie.parent }}</td>
                    <td>
                        <a href="{{ path("admin_categories_edit", {id: categorie.id} )}}" class="btn btn-secondary"><i class="pbi bi-pencil"></i></a>


                    </td>
                </tr>
            {% endfor %}

            </tbody>
            <tfoot>

            </tfoot>
        </table>
    </section>
    </div>


{% endblock %}
